{
    "compilerOptions": {
        "moduleResolution": "Bundler",
        "outDir": "target/tsc",
        "target": "ESNext",
        "module": "ESNext",
        "removeComments": false,
        "skipLibCheck": true,
        "lib": ["ESNext"],
        "allowArbitraryExtensions": true,
        "incremental": true,
        "tsBuildInfoFile": "target/.tsbuildinfo"
    },
    "include": ["./src/**/*.ts", "./types.d.ts", "src/contributors.js"],
}
